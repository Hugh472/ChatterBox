<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MyShows">

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.GameOfThrones"
                android:id="@+id/myshows_GOT"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.GreysAnatomy"
                android:id="@+id/myshows_greysAnatomy"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.Daredevil"
                android:id="@+id/myshows_daredevil"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.Flash"
                android:id="@+id/myshows_flash"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.The100"
                android:id="@+id/myshows_100"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.OnceUponATime"
                android:id="@+id/myshows_once"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.FOB"
                android:id="@+id/myshows_FOB"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.Murder"
                android:id="@+id/myshows_htgawm"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.SiliconValley"
                android:id="@+id/myshows_silliconValley"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.MadMen"
                android:id="@+id/myshows_madmen"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.HouseOfCards"
                android:id="@+id/myshows_HOC"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

            <fragment
                android:name="com.ec327.chatterbox.chatterbox.Arrow"
                android:id="@+id/myshows_arrow"
                android:layout_width="fill_parent"
                android:layout_height="100dp"/>

       </LinearLayout>
</ScrollView>