<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:longClickable="false">

    <EditText
        android:id="@+id/signUp_nickname_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/login_promptText_1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/signUp_password_input"
        android:layout_alignRight="@+id/signUp_password_input" />

    <EditText
        android:id="@+id/signUp_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/login_promptText_2"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/signUp_email_input"
        android:layout_alignRight="@+id/signUp_email_input">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/signUp_email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/signUp_promptText"
        android:gravity="center"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/logo_chatterbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <!-- Button for 15% tip -->

    <!-- The text in this line is not a background. Must find a way to make it anonymous -->


    <Button
        android:id="@+id/signUp_signUp"
        android:text="@string/signUp_signUp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_nickname_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_chatterbox"
        android:focusableInTouchMode="false"
        android:src="@drawable/chatterbox_logo"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/icon_description" />

    <!-- Button for 10% tip -->

    <!-- Text view for "select tip" on the main menu-->

</RelativeLayout>
